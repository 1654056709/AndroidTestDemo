<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.myapplication.ViewTestActivity">

    <com.example.administrator.myapplication.view.CircleView
        app:circle_color="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:background="@mipmap/ic_launcher"
        android:id="@+id/CustomDrawable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.example.administrator.myapplication.view.ProgressView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@android:color/transparent"
        app:currentProgress="40"
        app:maxProgress="100"
        app:progressColor="#ccedf7e9"
        app:radius="80dp"
        app:strokeWidth="30dp"
        app:text="40%"
        app:textColor="#ffffff"
        app:textSize="40dp"
        app:innerColor="#89cc73"
        app:outerColor="#9ad386" />
</LinearLayout>
