<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
>
    <Button
        android:id="@+id/bt_fixed_thread"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="固定的线程"/>
    <Button
        android:id="@+id/bt_auto_thread"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="单一的线程"/>
    <Button
        android:id="@+id/bt_only_thread"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="自动调整的线程"/>

    <Button
        android:id="@+id/bt_contor_thread"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="控制线程周期的线程"/>
    <Button
        android:id="@+id/bt_contor_one_thread"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="控制线程周期的线程线程数为1"/>

</LinearLayout>
